@using Transaction_Uploader.Models
@{
    ViewData["Title"] = "Transaction";
    Layout = "_Layout";
}

@model List<Currency>

<h1>Transaction</h1>
<div class="row">
    <div class="col-lg-3 col-md-6 col-sm-12">
        <label for="currency">Currency</label>
        <select class="form-control" id="currency">
            <option value="">All</option>
            @foreach (var currency in Model)
            {
                <!option value="@currency.cc">@currency.DisplayCurrencyInfo()</!option>
            }
        </select>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12">
        <label for="status">Currency</label>
        <select class="form-control" id="status">
            <option value="">All</option>
            <option value="A">A</option>
            <option value="R">R</option>
            <option value="D">D</option>
        </select>
    </div>
    <div class="col-lg-6 col-md-12 col-sm-12">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <label for="start_date">From</label>
                <input type="date" id="start_date" class="form-control" />
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <label for="end_date">To</label>
                <input type="date" id="end_date" class="form-control" />
            </div>
        </div>
    </div>
    <div class="btn btn-primary" id="searchButton" style="max-width:150px;margin: 10px;">Search</div>
    <span class="btn btn-primary" style="max-width:150px;margin: 10px;" data-target="uploadFileModal" onclick="openModal(this.getAttribute('data-target'))">Upload File</span>
</div>
<div class="display hidden">
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Payment</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <div class="pagination">
    </div>
</div>
<div id="uploadFileModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <form id="uploadForm">
            <p id="responseMessage"></p>
            <input type="file" id="fileInput" name="file" accept=".csv, .xml" required />
            <button type="submit" class="btn btn-danger" style="float:right;margin-top:10px;">Upload</button>
        </form>
    </div>
</div>